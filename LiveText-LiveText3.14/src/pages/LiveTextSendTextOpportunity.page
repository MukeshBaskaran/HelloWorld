<apex:page showHeader="false" sidebar="false" standardController="Opportunity">
<apex:includeScript value="/soap/ajax/31.0/connection.js"/>
<apex:includeScript value="/soap/ajax/31.0/apex.js"/>
<apex:includeScript value="/support/console/31.0/integration.js"/>

<script>
sforce.connection.sessionId = '{!$Api.Session_ID}';
window.onload = function(){
	
var objectId = '{!$CurrentPage.parameters.Id}';
var accountPrefix = objectId.substring(0, 3);

var phoneNumber = sforce.apex.execute("LiveText.RetrievePreferredPhoneNumber","getToPhoneNumberFromObject",{selectedObjId:objectId});
var params = '&phone='+phoneNumber +'&oid='+objectId+'&conversationtype=outbound&objectprefix='+accountPrefix;
var conversationSessionPrefix = '/{!$ObjectType.LiveText__Conversation_Session__c}/e?cvid=null'+params; 

if(sforce.console.isInConsole()) {
/**
	sforce.console.openPrimaryTab(null, conversationSessionPrefix, true, '{!HTMLENCODE($Label.LiveText__TXT_Conversation)}', null); 
	var closeSubtab = function closeSubtab(result) { 
		var tabId = result.id; 
		sforce.console.closeTab(tabId); 
	}; 
	sforce.console.getEnclosingTabId(closeSubtab); 
*/	
}
else{
	
	var query = "SELECT Id FROM AppMenuItem WHERE Name='LiveText_Console'";

	var queryResult = sforce.connection.query(query);
	var records = queryResult.getArray('records');
	var ltId = records[0].Id;
	
	window.top.location.href = 'https://'+window.location.hostname+'/console?tsid='+ltId +'#'+conversationSessionPrefix;
	
}
}
</script>
<div class="spinner">
  <div class="rect1"></div>
  <div class="rect2"></div>
  <div class="rect3"></div>
  <div class="rect4"></div>
  <div class="rect5"></div>
</div>
<style>
.spinner {
  margin: 100px auto;
  width: 50px;
  height: 40px;
  text-align: center;
  font-size: 10px;
}

.spinner > div {
  background-color: #2EA9E4;
  height: 100%;
  width: 6px;
  display: inline-block;
  
  -webkit-animation: sk-stretchdelay 1.2s infinite ease-in-out;
  animation: sk-stretchdelay 1.2s infinite ease-in-out;
}

.spinner .rect2 {
  -webkit-animation-delay: -1.1s;
  animation-delay: -1.1s;
}

.spinner .rect3 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}

.spinner .rect4 {
  -webkit-animation-delay: -0.9s;
  animation-delay: -0.9s;
}

.spinner .rect5 {
  -webkit-animation-delay: -0.8s;
  animation-delay: -0.8s;
}

@-webkit-keyframes sk-stretchdelay {
  0%, 40%, 100% { -webkit-transform: scaleY(0.4) }  
  20% { -webkit-transform: scaleY(1.0) }
}

@keyframes sk-stretchdelay {
  0%, 40%, 100% { 
    transform: scaleY(0.4);
    -webkit-transform: scaleY(0.4);
  }  20% { 
    transform: scaleY(1.0);
    -webkit-transform: scaleY(1.0);
  }
}
</style>

</apex:page>